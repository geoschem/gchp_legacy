 function divg (args)
 tag = subwrd(args,1)

'getinfo xdim'
im    = result  

dlon  = 360.0/im
lon1  = getlon1()
lon2  = getlon2()
lon1m = lon1 - dlon
lon2p = lon2 + dlon

'set lon 'lon1m' 'lon2p
'define div'tag' = hdivg(uwnd,vwnd)*10e6'
'set lon 'lon1' 'lon2

function getlon1(args)
'q dims'
xdim = sublin(result,2)
lon1 = subwrd(xdim,6)
return lon1

function getlon2(args)
'q dims'
xdim = sublin(result,2)
lon2 = subwrd(xdim,8)
return lon2

